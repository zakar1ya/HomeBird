@model UpdateOverheadsForm

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Закупки";
}

<form asp-action="Edit" asp-controller="Overheads" method="post">
    <div class="form-group">
        <label asp-for="Comment"></label>
        <input asp-for="Comment" type="text" />
        <span asp-validation-for="Comment"></span>
    </div>
    <div class="form-group">
        <label asp-for="Amount"></label>
        <input asp-for="Amount" type="text" />
        <span asp-validation-for="Amount"></span>
    </div>
    <div class="form-group">
        <label asp-for="OverheadDate"></label>
        <input asp-for="OverheadDate" type="text" />
        <span asp-validation-for="OverheadDate"></span>
    </div>
    <div class="form-group">
        <label asp-for="LotId"></label>
        <select asp-for="LotId">
            @foreach (var item in Model.Lots)
            {
                <option value="@item.Id">@item.IdentifierNumber (@item.CreationDate.Year)</option>
            }
        </select>
        <span asp-validation-for="LotId"></span>
    </div>
    <input class="btn btn-success" type="submit" value="Сохранить" />
    <a class="btn btn-default" asp-action="List" asp-controller="Overheads">Отмена</a>
</form>