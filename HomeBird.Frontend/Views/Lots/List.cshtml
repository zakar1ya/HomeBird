@model PagedViewModel<HbLot, PagedLotsForm>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Партии";
}

<div class="page-title">
    <div class="title_left">
        <h3>
            Сезон @Model.Form.Start.Year
        </h3>
    </div>

    <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search for...">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button">Go!</button>
                </span>
            </div>
        </div>
    </div>
</div>
<div class="clearfix"></div>

<div class="row">

    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Партии</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                    <div class="row"></div>
                    <div class="row">
                        <div class="col-sm-12">
                            <table id="datatable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>Номер партии</th>
                                        <th>Дата создания</th>
                                        <th>Продано шт.</th>
                                        <th>Средняя цена суточный</th>
                                        <th>Средняя цена подрост</th>
                                        <th>Потери шт.</th>
                                        <th>Выгода</th>
                                    </tr>
                                </thead>
                                @foreach (var lot in Model.List)
                                {
                                <tbody>
                                    <tr>
                                        <td>@($"{lot.IdentifierNumber} ({lot.CreationDate.Year}г.)")</td>
                                        <td>@lot.CreationDate.ToString("dd.MM.yyyy")</td>
                                        <td>@(lot.SoldCount.HasValue ? lot.SoldCount.ToString() : "-")</td>
                                        <td>@(lot.AvgDailyPrice.HasValue ? lot.SoldCount.ToString() : "-")</td>
                                        <td>@(lot.AvgAdultPrice.HasValue ? lot.SoldCount.ToString() : "-")</td>
                                        <td>@(lot.Loses.HasValue ? lot.SoldCount.ToString() : "-")</td>
                                        <td>@(lot.Profit.HasValue ? lot.SoldCount.ToString() : "-")</td>
                                    </tr>
                                </tbody>
                                }
                            </table>
                        </div>
                    </div>
                    @if (Model.Form.Total > Model.Form.Count)
                    {
                        @Html.Paging(Model.Form, u => Url.Action("List", "Lots", new PagedLotsForm { Offset = (u - 1) * Model.Form.Count }))
                    }
                </div>
                <a asp-action="Add" asp-controller="Lots" class="btn btn-success">Создать</a>
            </div>
        </div>
    </div>
</div>
