@model CreateLotForm

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Партии";
}

<article class="content">
    <div class="col-md-5">
        <div class="title-search-block">
            <div class="title-block">
                <div class="row">
                    <div class="col-md-6">
                        <h3 class="title">
                            Добавление партии
                        </h3>
                        <p class="title-description text-danger">
                            @ViewData[ViewDataKeys.ErrorMessage]
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <form asp-action="Add" asp-controller="Lots" method="post" class="col-md-3">
            <div class="form-group">
                <label>Номер</label>
                <input asp-for="IdentifierNumber" class="form-control" type="text" />
                <span asp-validation-for="IdentifierNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Год</label>
                <input asp-for="Year" class="form-control" type="text" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <input type="submit" class="btn btn-success" value="Сохранить" />
        </form>
    </div>
</article>