@model UpdateIncubatorForm

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Инкубаторы";
}

<form asp-action="Edit" asp-controller="Incubators" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" type="text" />
        <span asp-validation-for="Title"></span>
    </div>
    <input class="btn btn-success" type="submit" value="Сохранить" />
    <a class="btn btn-default" asp-action="List" asp-controller="Incubators">Отмена</a>
</form>