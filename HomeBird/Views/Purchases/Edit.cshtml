@model UpdatePurchaseForm

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Закупки";
}

<form asp-action="Edit" asp-controller="Purchases" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" type="text" />
        <span asp-validation-for="Address"></span>
    </div>
    <div class="form-group">
        <label asp-for="Count"></label>
        <input asp-for="Count" type="text" />
        <span asp-validation-for="Count"></span>
    </div>
    <div class="form-group">
        <label asp-for="Amount"></label>
        <input asp-for="Amount" type="text" />
        <span asp-validation-for="Amount"></span>
    </div>
    <div class="form-group">
        <label asp-for="PurchaseDate"></label>
        <input asp-for="PurchaseDate" type="text" />
        <span asp-validation-for="PurchaseDate"></span>
    </div>
    <div class="form-group">
        <label asp-for="LotId"></label>
        <select asp-for="LotId">
            @foreach (var item in Model.Lots)
            {
                <option value="@item.Id">@item.IdentifierNumber (@item.CreationDate.Year)</option>
            }
        </select>
        <span asp-validation-for="LotId"></span>
    </div>
    <input class="btn btn-success" type="submit" value="Сохранить" />
    <a class="btn btn-default" asp-action="List" asp-controller="Purchases">Отмена</a>
</form>
